<body>
  {{> navbar }}
  <div id="container">
    <h1>Sign up</h1>
    {{#if usernameExists}}
      <div>Username already exists.</div><br>
    {{/if}}
  <form action="register" method="post">
    <!-- Replace these inputs with your own. Make sure they have a "name" attribute! -->
    <input type="text" name="name" minlength="8" /><br>
    <input type="password" name="password" id="password" minlength="8"/><br>
    <button type="submit">
      <span>Send</span>
    </button>
  </form>
  </div>
</body>