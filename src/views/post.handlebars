
  <div id="navbar">
    <div id="logo"><a href="/">Better Reads</a></div>
    <div class="user-actions">
      {{#if loggedIn}}
      <a href="/logout">Logout</a>
      <a href="/profile">Hello, {{username}}</a>
      {{else}}
      <a href="/login">Login</a>
      <a href="/register">Register</a>
      {{/if}}
    </div>
  </div>

  <div id="main-layout">
    <div id="container">
      
      <button id="back-to-feed" onclick="history.back()">⬅️ Back to Feed</button>

      <!-- Single Post -->
      <div class="post" post-id="{{post_id}}">
        <div class="user-info">
          <strong>@<a href="{{username_post}}/profile">{{username_post}}</a></strong> on <a href="/book/{{book_id}}" class="topic-link"><em>{{topic}}</em></a>
        </div>
        <div class="review">
          {{content}}
        </div>
        <div class="post-actions">
            <a href="#" class="like-button"><span class="like-counter" style="margin-right: 8px;">{{draw-heart liked_by_user}} {{number_likes}}</span></a>
            <span style="margin-right: 8px;">🔁 {{number_reposts}}</span>
            <span style="margin-right: 8px;">📩 {{number_comments}}</span>
        </div>
      </div>

      <!-- Comments Section -->
      <div id="comments-section">
        <h2>Comments</h2>
        {{#if comments}}
        {{#each comments}}
        <!-- Existing Comment -->
        <div class="comment">
          <div class="comment-user">
            <strong>@<a href="{{username_comment}}/profile">{{username_comment}}</a></strong>:
          </div>
          <div class="comment-content">
            {{content}}
          </div>
        </div>
        
        {{/each}}
        {{else}}
        <p>No comments yet. Add one yourself!</p>
        {{/if}}
        {{#if loggedIn}}
        <!-- New Comment Form -->
        <form id="new-comment-form" action="/post/{{post_id}}/comment" method="post">
          <textarea name="comment-content" placeholder="Add a comment..." required></textarea>
          <button type="submit">Post Comment</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>

<script src="/static/js/updateLikes.js" type="text/javascript"></script>
<script src="/static/js/like.js" type="text/javascript" event_listener_location="container"></script>